<div class='container-fluid'>
  <h3 class='header'><%= @course.name %> (<%= @course.short_type %>)</h3>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th>Registered Students</th>
        <th>Course Code</th>
        <th>Degree Type</th>
        <th>Course Duration</th>
        <th>Settings</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
        <% if @course.students.size == 0 %>
          No registered students
        <% else %>
          <ol>
            <% @course.students.each do |s| %>
              <li>
                <%= link_to s.first_name, student_path(s) %>
              </li>
            <% end %>
          </ol>
        <% end %>
        </td>
        <td><%= @course.code %></td>
        <td><%= @course.short_type %></td>
        <td><%= @course.duration %> Years</td>
        <td>
          <%= link_to 'Edit', edit_course_path(@course), remote: true, class:'edit' %>
          |
          <%= link_to 'Delete', course_path(@course),
            class:'delete', method: :delete,
            data: { confirm: "Are you sure you want to delete course?" }
          %>
        </td>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to 'Back to courses', courses_path, class:'back' %>
  </div>
  <div id="myModal"></div>
</div>
