<div class='container'>
  <div>
    <%= @course.name %>
  </div>
  <p>
    <%= link_to 'Edit', edit_course_path(@course), remote: true, class:'edit' %> |
    <%= link_to 'Delete', course_path(@course),
      class:'delete', method: :delete,
      data: { confirm: "Are you sure you want to delete course?" }
    %> |
    <%= link_to 'Back to courses', courses_path, class:'back' %>
  </p>
  <div id="myModal"></div>

</div>
