<div class='container form'>
  <h2 class='student-form'>Create student profile</h2>
  <br/>
  <p> &#x2190; <%= link_to ' Back to Students', students_path %></p>
  <%= render partial: 'partials/form_errors',
    locals: { errors: @student.errors.full_messages } if @student.errors.any?%>
  <%= form_for @student, url: { action: :create } do |f| %>
    <%= render partial: 'forms', locals: { f: f, save_prompt: 'Create Student' } %>
  <% end %>
</div>
