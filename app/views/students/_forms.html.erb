<%= form_for @student do |f|%>
  <div class='form-group'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder: 'First name', class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :admission_number %>
    <%= f.text_field :admission_number, placeholder: 'X75/2311/2018', class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :national_id_number %>
    <%= f.number_field :national_id_number, placeholder: 'National ID Number', class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :course %>
    <%= select_tag "course_id", options_for_select(@courses), :class => 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :department %>
    <%= f.select :department, Student::DEPARTMENTS, {}, class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :year_of_admission %>
    <%= f.text_field :year_of_admission, placeholder:'Click here to select date', class:'form-control datepicker'%>
  </div>
  <div class='form-group'>
    <%= f.label :year_of_completion %>
    <%= f.text_field :year_of_completion, placeholder:'Click here to select date', class: 'form-control datepicker'%>
  </div>
  <div class='form-group'>
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select(['Male','Female']), {}, class:'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :fee_status %>
    <%= f.select :fee_status, options_for_select(['Complete','Incomplete']), {}, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit save_prompt, class: 'btn btn-primary' %>
  </div>
<% end %>
