<% if @attendances.size == 0 %>
  <p>Sorry, no attendance has been filled for this student</p>
  <p><%= link_to 'Create new attendance', new_attendance_path %></p>
<% else %>
  <p class='header'>Student's attendances</p>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th>Student Name</th>
        <th>Date</th>
        <th>Status</th>
        <th>Settings</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do|attendance| %>
        <tr>
          <td>
            <%= attendance.student.first_name %>
          </td>
          <td><%= attendance.updated_at.to_date.strftime("%d/%m/%Y") %></td>
          <td>
            <%= attendance.status %>
          </td>
          <td><%= link_to 'Take register', new_attendance_path %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
