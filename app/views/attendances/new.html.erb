<div class='container form'>
  <%= form_for(:attendance, { controller:'attendance', action: 'create'}) do |f|%>
    <div class='form-group'>
      <%= f.label :student_name %>
      <%= f.select(:student_id, {}, {}, class:'form-control') do %>
        <%= @students.each do |s| %>
          <%= content_tag(:option, "#{s.first_name} #{s.last_name}", value: s.id) %>
        <% end %>
      <% end %>
    </div>
    <div class='form-group'>
      <%= f.label :status %>
      <%= f.select :status, Attendance::STATUS, {}, class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= f.label :date %>
      <%= f.text_field :date, placeholder:'Click here to select date', class: 'form-control datepicker-striped'%>
    </div>
    <div class="form-group">
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
